<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <servlet>
        <servlet-name>faculties</servlet-name>
        <jsp-file>/faculties.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>faculties</servlet-name>
        <url-pattern>/faculties-jsp</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>applicants</servlet-name>
        <jsp-file>/applicants.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>applicants</servlet-name>
        <url-pattern>/applicants-jsp</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>main</servlet-name>
        <jsp-file>/main.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>main</servlet-name>
        <url-pattern>/main-jsp</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>result</servlet-name>
        <jsp-file>/result.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>result</servlet-name>
        <url-pattern>/result-jsp</url-pattern>
    </servlet-mapping>
    <filter>
        <filter-name>UTF8Filter</filter-name>
        <filter-class>com.example.selectioncommittee.filters.UTF8Filter</filter-class>
    </filter>

    <filter-mapping>
        <filter-name>UTF8Filter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
</web-app>